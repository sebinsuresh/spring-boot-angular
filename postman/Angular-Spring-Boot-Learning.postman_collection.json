							"mode": "raw",
							"raw": "{\r\n    \"id\": \"{{1_lastId}}\",\r\n    \"email\": \"{{$randomEmail}}\",\r\n    \"imageUrl\": \"https://robohash.org/{{$randomLoremSlug}}\",\r\n    \"jobTitle\": \"{{$randomJobTitle}}\",\r\n    \"name\": \"{{$randomFullName}}\",\r\n    \"phone\": \"{{$randomPhoneNumber}}\"\r\n}",
